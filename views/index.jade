extend layout

block content
  if session
    mixin messageForm('', 'Write your message', '', 'Post')

    section
      ol.tabs
        li.my-feed.selected(data-url="/my/feed") My Feed
        li.user-mentions(data-url="/user/mentions/#{session.id}") Mentions
        li.global-feed(data-url="/global/feed") Global Feed

      ol#unread-messages
        h2
        ol
      ol.messages(data-userid='#{session.id}')
  else
    section.public
      ol.tabs
        li.global-feed(data-url="/global/feed") Global Feed
      ol.messages
        li
          h1 You need to sign in with your App.net account to see this glorious noodle.
          a(href='/auth/appdotnet', id='login') Log in
