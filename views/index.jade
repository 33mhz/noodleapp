extend layout

block content
  #dashboard
    .dashboard-content
      if user
        #write
          form(method='post')
            textarea(name='message', placeholder='Write your message')
            input(type='hidden', name='_csrf', value='#{csrf}')
            button(type='submit') Post

        section
          ol.tabs
            li.my-posts.selected My Posts
            li.my-feed My Feed
            li.global-feed Global Feed

          ol.messages
